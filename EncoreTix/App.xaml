<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:EncoreTix"
             x:Class="EncoreTix.App">
  <Application.Resources>
    <ResourceDictionary>

      <Color x:Key="PageBackgroundColor">#EDF5F9</Color>
      <Color x:Key="PrimaryTextColor">#182F40</Color>

      <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource PrimaryTextColor}" />
        <Setter Property="FontFamily" Value="Inter-VariableFont" />
      </Style>

      <Style TargetType="Button">
        <Setter Property="TextColor" Value="{DynamicResource PageBackgroundColor}" />
        <Setter Property="FontFamily" Value="Inter-VariableFont" />
        <Setter Property="BackgroundColor" Value="#186CA8" />
        <Setter Property="Padding" Value="5.4" />
        <Setter Property="CornerRadius" Value="18"/>
      </Style>

    </ResourceDictionary>
  </Application.Resources>
</Application>